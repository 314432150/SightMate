<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_direction_control"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 上按钮 -->
        <ImageButton
            android:id="@+id/btnUp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_direction_button"
            android:contentDescription="上"
            android:src="@drawable/ic_arrow_up" />

        <!-- 中间行：左、中心、右按钮 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnLeft"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_direction_button"
                android:contentDescription="左"
                android:src="@drawable/ic_arrow_left" />

            <!-- 关闭按钮 -->
            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="12dp"
                android:alpha="0.6"
                android:background="@drawable/bg_direction_button"
                android:contentDescription="关闭"
                android:src="@drawable/ic_close" />

            <ImageButton
                android:id="@+id/btnRight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_direction_button"
                android:contentDescription="右"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <!-- 下按钮 -->
        <ImageButton
            android:id="@+id/btnDown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_direction_button"
            android:contentDescription="下"
            android:src="@drawable/ic_arrow_down" />

    </LinearLayout>
</FrameLayout>
